{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": true,
    "typeRoots": [
      "./@types",        
      "./node_modules/@types"
    ],
    "types": ["jest", "node", "express"],  
    "rootDir": "."
  },
  "include": [
    "src/**/*",         
    "tests/**/*.ts",     
    "@types/**/*"       
  ],
  "exclude": [
    "node_modules"
  ]
}
